<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.monash.demo.backend.mapper.ProfileMapper">
    <insert id="insertUserInformation" useGeneratedKeys="true" keyProperty="id">
        insert into User_information(name, age, gender, email, phone, create_time, update_time)
        values (#{name}, #{age}, #{gender}, #{email}, #{phone}, #{createTime}, #{updateTime})

    </insert>

    <insert id="insertUserInformationSports">
        insert into User_information_sports(user_id, sport)
        values
        <foreach collection="sports" item="item" separator=",">
            (#{id}, #{item})
        </foreach>
    </insert>

    <select id="pageQueryForUserInformation">
        select * from User_information order by update_time DESC
    </select>
</mapper>